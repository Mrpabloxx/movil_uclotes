<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Pass1">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="271dp"
        android:layout_height="96dp"
        android:layout_gravity=""
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115"
        app:srcCompat="@drawable/tienda_de_ropa" />

    <Button
        android:id="@+id/next1"
        android:layout_width="183dp"
        android:layout_height="41dp"
        android:layout_weight="1"
        android:backgroundTint="@color/principal"
        android:text="Siguiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TBusca"
        app:layout_constraintVertical_bias="0.709" />

    <TextView
        android:id="@+id/TBusca"
        android:layout_width="222dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:autoSizeTextType="uniform"
        android:text="Busca"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/principal"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textBus"
        android:layout_width="236dp"
        android:layout_height="82dp"
        android:autoSizeTextType="uniform"
        android:text="Busca una lavandería o  empresa en las docenas de  opciones cercanas. Ve  calificaciones y precios por  artículo para cada tienda"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/next1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TBusca"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>